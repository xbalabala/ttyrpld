+
+    cmd32   = cmd;
+    p.dev   = TTY_DEVNR(tty);
+    p.size  = htole16(sizeof(cmd32));
+    p.event = EVT_IOCTL;
+    p.magic = MAGIC_SIG;
+    fill_time(&p.time);
+    return circular_put_packet(&p, &cmd32, sizeof(cmd32));
