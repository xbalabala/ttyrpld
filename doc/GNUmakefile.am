# -*- Makefile -*-

targets = $(patsubst ${srcdir}/%.php,%.html,$(wildcard ${srcdir}/*.php)) \
          $(patsubst ${srcdir}/%.php,%.txt,$(wildcard ${srcdir}/*.php))

CLEANFILES = ${targets}

all: ${targets}

%.html: %.php
	${am__verbose_GEN}${PHP} -q $< man | ${PERL} -pe 's{href="([^/]*?)\.php"}{href="$$1.html"}' >$@;

%.txt: %.html
	${am__verbose_GEN}${W3M} -dump $< >$@;
